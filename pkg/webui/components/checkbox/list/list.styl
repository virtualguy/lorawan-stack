.checkbox-list
  border-normal()
  border-radius: $br.s
  position: relative
  display: inline-block
  padding-top: 2.75rem
  vertical-align: middle
  box-sizing: border-box
  background: white

.header
  border-normal('bottom')
  border-radius: $br.s $br.s 0 0
  position: absolute
  display: flex
  align-items: center
  justify-content: space-between
  top: 0
  left: 0
  padding: $cs.xs $cs.s
  width: 100%
  overflow: hidden
  background: inherit
  box-sizing: inherit

  &-with-transfer.header-count-label
    padding-right: $cs.s

  & > div
    display: flex
    justify-content: space-between
    align-items: center

  &-count-label
    text-align: right
    padding-right: 0

.body
  position: relative
  height: 100%
  background: white
  border-radius: 0 0 $br.s $br.s
  box-sizing: inherit
  display: flex
  width: 300px // TODO: remove

  &-with-transfer
    .body-content-all
      margin-right: -1px
      border-normal('right')

  &-content
    height: 100%
    margin: 0
    padding: 0
    overflow: auto
    list-style: none
    background: inherit

    li:not(:last-child)
      margin-bottom: 0

    &-all,
    &-selected
      padding: 0 $cs.xs
      width: 100%
      height: 100%
      box-sizing: inherit
      overflow-x: hidden

    &-selected
      border-normal('left')
      display: flex
      flex-direction: column

    &-item
      padding: $cs.s
